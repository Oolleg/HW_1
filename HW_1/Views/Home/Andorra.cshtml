@model HW_1.Models.CountryData;

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="mainDivTable"> 
                <img src=@Model.CountryImg class="img-fluid rounded-start" alt=@Model.CountryName>
                <div class="countryDiv">
                    <div class="countryFreedom">
                        <span>Freedom in the World 2023</span>
                    </div>
                    <div>
                        <div class="score">
                            <div>
                                <h2 class="score-wrapper">@Model.CountryName</h2>
                                <div class="chipsFree backColorGreen">Free</div>
                            </div>
                            <div>
                                <div class="score-wrapper">@Model.Score</div>
                                <div>/100</div>
                            </div>
                        </div>

                        <table class="table tableSet">
                            <tbody>
                                <tr>
                                    <td>
                                        <span>PR</span>
                                        <span>Political Rights</span>
                                    </td>
                                    <td>
                                        <span>@Model.PrFist</span>
                                        <span>/</span>
                                        <span>@Model.PrSecond</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span>Civil Liberties</span>
                                    </td>
                                    <td>
                                        <span>@Model.ClFist</span>
                                        <span>/</span>
                                        <span>@Model.ClSecond</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
           
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container textMarginTop">
    <div class="row">
        <div class="col-lg-12">
            <p class="text_align_justify">@Model.CountryText</p>
        </div>
    </div>
</div>


