@{
    ViewData["Name"] = "La_Gatta";
    ViewData["ImageSrc"] = "/img/La-gatta-pizzeria-valensiya.jpg";
    ViewData["Titel"] = "Уникальная пиццерия в Валенсии, где пиццу будто не выпекают по традиционным рецептам, а создают с помощью волшебных заклинаний – настолько она хороша! «Здесь вы найдёте настоящую неаполитанскую пиццу, признанную ЮНЕСКО достоянием человечества!» - так гласит надпись на входной двери в ресторан «La Gatta» в Валенсии, и мы склонны ей верить!";
    ViewData["Address"] = "Calle del Conde de Altea, 36";
    ViewData["Phone"] = "(+34) 622 23 99 95";
    ViewData["hrefWeb"] = "https://lagattapizzeria.es/";
    ViewData["NameWeb"] = "www.lagattapizzeria.es";

}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col col-lg-2">
        </div>
        <div class="col-8">
            <h1 class="display-4 text-center">@ViewData["Name"]</h1>
            <p><img class="rounded img-fluid d-block" src=@ViewData["ImageSrc"] alt="50 лучших ресторанов и баров Валенсии"></p>
            <p>@ViewData["Titel"]</p>
            <div class="card">
                <div class="card-header">
                    <h3>Полезная информация</h3>
                </div>
                <div class="card-body">
                    <div class="row nopadding">
                        <div class="col-lg-6">
                            <dl class="separator">
                                <dt>Адрес:</dt>
                                <dd>@ViewData["Address"]</dd>
                                <dt>Телефон:</dt>
                                <dd>@ViewData["Phone"]</dd>
                            </dl>
                        </div>
                        <div class="col-lg-6">
                            <dl class="separator">
                                <dt>Сайт:</dt>
                                <dd>
                                    <a href="@ViewData["hrefWeb"]" target="_blank">@ViewData["NameWeb"]</a>
                                </dd>

                            </dl>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col col-lg-2"></div>
    </div>
</div>
